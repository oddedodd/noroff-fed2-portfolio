---
import Card from "../components/Card.astro";
import Welcome from "../components/Welcome.astro";
import Layout from "../layouts/Layout.astro";
import { getPosts } from "../utils/sanity";

const posts = await getPosts();
---

<Layout title="Welcome to Astro.">
  <div class="bg-blue-50 p-4 rounded-lg mb-6">
    <h1 class="text-3xl font-bold text-blue-900 mb-2">Tailwind CSS is working! ðŸŽ‰</h1>
    <p class="text-blue-700">This styled section confirms that Tailwind CSS has been successfully integrated.</p>
  </div>
  <section>
    {posts.length ? posts.map((post) => <Card post={post} />) : <Welcome />}
  </section>
</Layout>
