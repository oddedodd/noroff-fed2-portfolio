---
import { Facebook, Linkedin, Instagram, Github } from '@lucide/astro';
---

<section class="px-6 mt-10" id="socials">
  <div class="max-w-6xl mx-auto text-center">
    <h2 class="text-3xl md:text-4xl font-headline text-dark mb-8 font-medium">My Socials:</h2>
    
    <div class="flex justify-center items-center gap-8 flex-wrap">
      <!-- Facebook -->
      <a 
        href="https://www.facebook.com/oddedodd/" 
        target="_blank" 
        rel="noopener noreferrer"
        class="group flex flex-col items-center p-4 font-light rounded-full bg-secondary hover:bg-primary text-light transition-colors duration-300"
      >
        <Facebook class="w-8 h-8" />
      </a>

      <!-- LinkedIn -->
      <a 
        href="https://www.linkedin.com/in/oddegilhselnes/" 
        target="_blank" 
        rel="noopener noreferrer"
        class="group flex flex-col items-center p-4 font-light rounded-full bg-secondary hover:bg-primary text-light transition-colors duration-300"
      >
        <Linkedin class="w-8 h-8" />
      </a>

      <!-- GitHub -->
      <a 
        href="https://github.com/oddedodd" 
        target="_blank" 
        rel="noopener noreferrer"
        class="group flex flex-col items-center p-4 font-light rounded-full bg-secondary hover:bg-primary text-light transition-colors duration-300"
      >
        <Github class="w-8 h-8" />
      </a>

      <!-- Instagram -->
      <a 
        href="https://www.instagram.com/oddedodd/"
        target="_blank" 
        rel="noopener noreferrer"
        class="group flex flex-col items-center p-4 font-light rounded-full bg-secondary hover:bg-primary text-light transition-colors duration-300"
      >
        <Instagram class="w-8 h-8" />
      </a>
    </div>
  </div>
</section> 